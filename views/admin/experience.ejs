
    <section class="tab-pane" id="experience-tab" role="tabpanel">
        <h5>experience</h5>


<%  experiences.forEach((exp) => { %>
        <div class="card card-body mb-3">
              <form action="/experiences/<%= exp.id %>?_method=PUT" method="post">
            <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
              <label for="titleExperience">Title</label>
              <input type="text" class="form-control" name="titleExperience" value="<%= exp.title %>">
            </div>
            <div class="form-group">
              <label for="company">Company</label>
              <input type="text" class="form-control" name="company" value="<%= exp.company %>">
            </div>
            <div class="form-group">
              <label for="startDate">Start Date</label>  
              <input type="date" class="form-control" name="startDate" value="<%= moment(exp.startDate).format('YYYY-MM-DD') %>">
            </div>
            <div class="form-group">
              <label for="endDate">End Date</label>
              <input type="date" class="form-control" name="endDate" value="<%= moment(exp.endDate).format('YYYY-MM-DD') %>">
            </div>
            <div class="form-group">
               <label for="categoryExperience">Category</label>
               <select class="browser-default custom-select" name="categoryExperience">
                <% for(let value of ["experience", "education"]) { %> 
                  <option <%= ( exp.category == value ) ? "selected" : "" %> value="<%= value %>"><%= value %></option> 
                <% } %>
              </select>
            </div>
            <div class="form-group">
              <label for="detailsExperience">Details</label>
              <textarea class="form-control" name="detailsExperience"><%= exp.details %></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
            <a href="/experiences/<%= exp.id %>?_method=DELETE" class="btn btn-primary">Delete</a> 
          </form>
        </div>
 <% }) %> 

        <div class="card card-body mb-3">

          <form action="/experiences" method="post">
            <input type="hidden" name="_method" value="POST">
            <div class="form-group">
              <label for="titleExperience">Title</label>
              <input type="text" class="form-control" name="titleExperience" value="" required>
            </div>
            <div class="form-group">
              <label for="company">Company</label>
              <input type="text" class="form-control" name="company" value="" required>
            </div>
            <div class="form-group">
              <label for="startDate">Start Date</label>
              <input type="date" class="form-control" name="startDate" value="" required>
            </div>
            <div class="form-group">
              <label for="endDate">End Date</label>
              <input type="date" class="form-control" name="endDate" value="" required>
            </div>
            <div class="form-group">
               <label for="category">Category</label>
               <select class="browser-default custom-select" name="categoryExperience" required>
                <option value="" disabled selected hidden>Open this select menu</option>
                <% for(let value of ["experience", "education"]) { %> 
                  <option value="<%= value %>"><%= value %></option> 
                <% } %>
              </select>
            </div>
            <div class="form-group">
              <label for="detailsExperience">Details</label>
              <textarea class="form-control" name="detailsExperience" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
          </form>
        </div>

    </section>
