<section class="tab-pane" id="design-tab" role="tabpanel">
	<h5>design block</h5>
  <% pastexperiences.forEach((pastexperience) => { %>
      <div class="card card-body mb-3">
        <form action="/pastexperiences/<%= pastexperience.id %>?_method=PUT" method="post">
            <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
              <label for="skill">Skill</label>
              <input type="text" class="form-control" name="skill" value="<%= pastexperience.skill %>">
            </div>
            <div class="form-group">
              <label for="iconExperience">Icon</label>
              <input type="text" class="form-control" name="iconExperience" value="<%= pastexperience.icon %>">
            </div>
            <div class="form-group">
              <label for="detailsExperience">Details</label>
              <textarea class="form-control" name="detailsExperience"><%= pastexperience.details %></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
            <a href="/pastexperiences/<%= pastexperience.id %>?_method=DELETE" class="btn btn-primary">Delete</a> 
        </form>
      </div>
  <% }) %> 
      <div class="card card-body mb-3">
          <form action="/pastexperiences" method="post">
            <input type="hidden" name="_method" value="POST">
            <div class="form-group">
              <label for="skill">Skill</label>
              <input type="text" class="form-control" name="skill" value="" required>
            </div>
            <div class="form-group">
              <label for="iconExperience">Icon</label>
              <input type="text" class="form-control" name="iconExperience" value="" required>
            </div>
            <div class="form-group">
              <label for="detailsExperience">Details</label>
              <textarea class="form-control" name="detailsExperience" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
          </form>
      </div>
</section>